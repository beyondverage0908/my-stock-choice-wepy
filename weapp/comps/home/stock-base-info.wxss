.info {
  flex: 5;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.info .name {
  font-size: 60rpx;
  color: #83b1e5;
  margin: 10rpx 0 15rpx;
}
.info .code {
  font-size: 30rpx;
  color: #868686;
}
.info .tag-list {
  display: flex;
  justify-content: flex-start;
  margin: 40rpx 0;
}
.info .tag-list .tag {
  display: inline-block;
  background-color: #eeeeee;
  padding: 10rpx 15rpx;
  font-size: 21rpx;
  border-radius: 5rpx;
  color: #c1c1c1;
  margin: 0 10rpx;
}

